{
  "name": "cqa",
  "version": "0.1.0",
  "description": "Command Query App",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint --fix src/**/*.ts",
    "report-coverage": "minicat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwikstrom/cqa.git"
  },
  "author": "Mårten Wikström",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mwikstrom/cqa/issues"
  },
  "homepage": "https://github.com/mwikstrom/cqa#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "coveralls": "^3.0.0",
    "jest": "^22.4.3",
    "minicat": "^1.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.3",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
