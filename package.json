{
  "name": "cqa",
  "version": "0.1.0",
  "description": "Command Query App",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "check": "npm run build && npm run lint && npm run test",
    "clean": "rimraf dist",
    "compile": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint --fix src/**/*.ts",
    "preversion": "npm run check",
    "prepublishOnly": "npm run check",
    "report-coverage": "minicat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwikstrom/cqa.git"
  },
  "author": "Mårten Wikström",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mwikstrom/cqa/issues"
  },
  "homepage": "https://github.com/mwikstrom/cqa#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/object-hash": "^1.2.0",
    "coveralls": "^3.0.1",
    "jest": "^22.4.3",
    "minicat": "^1.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!src/env.d.ts",
      "!src/global.ts",
      "!src/index.ts",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/*.{test,spec}.{ts,tsx}"
    ]
  },
  "dependencies": {
    "idb": "^2.1.1",
    "mobx": "^4.2.1",
    "object-hash": "^1.3.0"
  }
}
